<div class="form_holder">
    <h2 class="fs-title">Register</h2>
    <form action="/register" id="msform" method="POST">
        <ul id="progressbar">
            <li class="active">1. Login Information</li>
            <li>2. Basic Information</li>
            <li>3. About the Company</li>
        </ul>
        <fieldset>
            <h2 class="fs-title">Login</h2>
            <h3 class="fs-subtitle">This is how you log in</h3>
            <input type="email" name="user[email]" placeholder="Email">
            <input type="password" name="user[password]" placeholder="Password">
            <input type="button" name="next" class="next action-button" value="Next">
        </fieldset>

        <fieldset>
            <h2 class="fs-title">About your Company</h2>
            <h3 class="fs-subtitle">Tell us about your company</h3>
            <input type="text" name="therapy[name]" placeholder="Company Name">
            <input type="text" name="therapy[street1]" placeholder="Address 1">
            <input type="text" name="therapy[street2]" placeholder="Address 2">
            <input type="text" name="therapy[city]" placeholder="City">
            <input type="text" name="therapy[state]" placeholder="State">
            <input type="text" name="therapy[zip]" placeholder="Zip Code">
            <input type="button" name="previous" class="previous action-button" value="Previous">
            <input type="button" name="next" class="next action-button" value="Next">
        </fieldset>

        <fieldset>
            <h2 class="fs-title">Other Comapny Information</h2>
            <h3 class="fs-subtitle">Type of Therapy, Website, About</h3>
            <input type="text" name="therapy[type]" placeholder="Type of Therapy">
            <input type="text" name="therapy[website]" placeholder="Website">
            <input type="button" name="previous" class="previous action-button" value="Previous">
            <input type="submit" name="submit" class="submit action-button" value="Submit">
        </fieldset>
    </form>
</div>
